---
import SideBarFooter from "./SideBarFooter.astro";
import { Image } from "astro:assets";
import SideBarMenu from "./SideBarMenu.astro";
const { sideBarActiveItemID } = Astro.props;
---

<div class="py-4 text-center">
  <img width="200" height="200" 
       src="/zac-hero.webp" 
       class="mx-auto rounded-xl shadow-2xl ring-2 ring-primary/20 hover:ring-primary/40 transition-all duration-300" 
       alt="Zac Crush - Vietnam MMA Leader">
  
  <h1 class="text-xl font-bold mt-4">Zac Crush</h1>
  <p class="text-sm text-base-content/70 mt-1">Vietnam MMA Empire Builder</p>
  <div class="flex justify-center mt-2 space-x-2">
    <div class="badge badge-primary badge-sm">Tournament Organizer</div>
    <div class="badge badge-secondary badge-sm">SEA Partnerships</div>
  </div>
</div>
